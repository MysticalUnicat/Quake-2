{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "one",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/quake2.exe",
            "args": [
                "-set",
                "basedir",
                "c:\\quake2",
                "+set",
                "deathmatch",
                "1",
                "+map",
                "q2dm1"
            ],
            "cwd": "c:\\quake2"
        },
        {
            "name": "server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/quake2.exe",
            "args": [
                "-set",
                "basedir",
                "c:\\quake2",
                "+set",
                "dedicated",
                "1",
                "+set",
                "deathmatch",
                "1",
                "+map",
                "q2dm1"
            ],
            "cwd": "c:\\quake2"
        },
        {
            "name": "client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/quake2.exe",
            "args": [
                "-set",
                "basedir",
                "c:\\quake2",
                "+connect",
                "127.0.0.1"
            ],
            "cwd": "c:\\quake2"
        },
        {
            "name": "q2tools-220",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tools/q2tools-220.exe",
            "args": [
                "-rad",
                "-bounce",
                "16",
                "-scale",
                "0.5",
                "c:\\quake2\\baseq2\\maps\\q2dm1.bsp"
            ],
            "cwd": "c:\\quake2"
        },
        {
            "name": "4rad",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tools/4rad.exe",
            "args": [
                "-threads",
                "1",
                "c:\\quake2\\baseq2\\maps\\uc_city1.map"
            ],
            "cwd": "c:\\quake2"
        }
    ],
    "compounds": [
        {
            "name": "server / client",
            "configurations": [
                "server",
                "client"
            ]
        }
    ]
}